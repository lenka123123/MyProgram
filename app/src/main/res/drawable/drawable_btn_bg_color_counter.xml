<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 填充 -->
    <solid android:color="@color/colorWhite" /> <!-- 定义填充的颜色值 -->

    <!-- 描边 -->
    <stroke
        android:width="0.5dp"
        android:color="@color/colorD2" /> <!-- 定义描边的宽度和描边的颜色值 -->

    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="1dp"
        android:bottomRightRadius="1dp"
        android:topLeftRadius="1dp"
        android:topRightRadius="1dp" /> <!-- 设置四个角的半径 -->

    <!-- 间隔 -->
    <padding
        android:bottom="10dp"
        android:left="3dp"
        android:right="3dp"
        android:top="10dp" /> <!-- 设置各个方向的间隔 -->
</shape>