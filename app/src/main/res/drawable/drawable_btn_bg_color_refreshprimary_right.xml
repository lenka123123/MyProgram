<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 填充 -->
    <solid
        android:color="@color/colorPrimary" /> <!-- 定义填充的颜色值 -->

    <!-- 描边 -->
    <stroke
        android:width="0.5dp"
        android:color="@color/colorAC" /> <!-- 定义描边的宽度和描边的颜色值 -->

    <!-- 圆角 -->
    <corners

        android:bottomRightRadius="25dp"

        android:topRightRadius="25dp" /> <!-- 设置四个角的半径 -->

    <!-- 间隔 -->
    <padding
        android:top="6dp"
        android:bottom="6dp"
        android:left="25dp"
        android:right="25dp"
        /> <!-- 设置各个方向的间隔 -->
</shape>