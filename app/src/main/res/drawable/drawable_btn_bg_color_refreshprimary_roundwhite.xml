<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 填充 -->
   <!-- <solid
        android:color="#99ffffff" /> &lt;!&ndash; 定义填充的颜色值 &ndash;&gt;-->

    <!-- 描边 -->
    <stroke
        android:width="2dp"
        android:color="#ffffff" /> <!-- 定义描边的宽度和描边的颜色值 -->

    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="35dp"
        android:bottomRightRadius="35dp"
        android:topLeftRadius="35dp"
        android:topRightRadius="35dp" /> <!-- 设置四个角的半径 -->

    <!-- 间隔 -->
    <padding
        android:top="5dp"
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        /> <!-- 设置各个方向的间隔 -->
</shape>