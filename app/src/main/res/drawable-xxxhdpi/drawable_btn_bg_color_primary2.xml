<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 填充 -->
    <solid android:color="#10ffffff" /> <!-- 定义填充的颜色值 -->

    <!-- 描边 -->
    <stroke
        android:width="0.5dp"
        android:color="#10ffffff" /> <!-- 定义描边的宽度和描边的颜色值 -->

    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="21dp"
        android:bottomRightRadius="21dp"
        android:topLeftRadius="21dp"
        android:topRightRadius="21dp" /> <!-- 设置四个角的半径 -->

    <!-- 间隔 -->
    <padding
        android:bottom="5dp"
        android:left="18dp"
        android:right="18dp"
        android:top="5dp" /> <!-- 设置各个方向的间隔 -->
</shape>