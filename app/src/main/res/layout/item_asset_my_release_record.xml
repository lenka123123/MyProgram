<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RelativeLayout_Default">

    <TextView
        android:id="@+id/tv_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/unit_price"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_alignBottom="@+id/tv_unit_price"
        android:layout_toRightOf="@+id/tv_unit_price"
        android:layout_toEndOf="@+id/tv_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_release_num"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/release_num"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_alignBottom="@+id/tv_release_num"
        android:layout_toRightOf="@+id/tv_release_num"
        android:layout_toEndOf="@+id/tv_release_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_surplus_num"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/tv_release_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/surplus_num"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_alignBottom="@+id/tv_surplus_num"
        android:layout_toRightOf="@+id/tv_surplus_num"
        android:layout_toEndOf="@+id/tv_surplus_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/surplus_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/create_time"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_alignBottom="@+id/tv_create_time"
        android:layout_toRightOf="@+id/tv_create_time"
        android:layout_toEndOf="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/action_asset_release_delete"
        android:gravity="end"
        android:layout_toLeftOf="@+id/action_asset_release_edit"
        android:layout_toStartOf="@+id/action_asset_release_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_alignBottom="@+id/tv_create_time"
        android:textSize="@dimen/text_size_style_three"
        android:background="@drawable/drawable_btn_bg_color_white" />

    <TextView
        android:id="@+id/action_asset_release_edit"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimary"
        android:layout_alignBottom="@+id/tv_create_time"
        android:textSize="@dimen/text_size_style_three"
        android:background="@drawable/drawable_btn_bg_color_white" />
</RelativeLayout>