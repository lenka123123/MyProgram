<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        style="@style/RelativeLayout_Default"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
          android:src="@mipmap/ic_launcher"
            android:layout_width="14dp"
            android:layout_height="14dp"

            >
        </ImageView>
        <TextView
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="玛丽黛佳官方旗舰店"
            >
        </TextView>
        <TextView

           android:gravity="right"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"/>
    </LinearLayout>
<View
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/colorGray"></View>
    <LinearLayout
        style="@style/LinearLayout_Divider"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/item_my_zichan"
            android:layout_weight="1"
            android:text="1122" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
   <TextView
       android:layout_marginTop="10dp"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
     android:text="EVrD杭大路看哪里的时间你的扣篮电缆记得评价是"
    android:textSize="15sp"
       android:lines="2"
    android:textColor="#333"
    android:textStyle="bold"
    android:layout_marginLeft="15dp"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_marginTop="15dp"
               android:layout_marginLeft="15dp"
               android:id="@+id/item_my_zhihuan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="数量:"/>
           <TextView
               android:id="@+id/item_my_count"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="15dp"
               android:layout_toRightOf="@+id/item_my_zhihuan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="X2"/>
           <TextView

               android:layout_marginTop="15dp"
               android:layout_marginLeft="120dp"
               android:layout_toRightOf="@+id/item_my_count"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="￥122.67"/>
      </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            >
     <TextView
         android:layout_marginRight="15dp"
         android:id="@+id/item_my_yunfei"
         android:layout_alignParentRight="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="(含运费)"/>
    <TextView
        android:id="@+id/item_myjiage"
    android:layout_toLeftOf="@+id/item_my_yunfei"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="$122.00"/>
        <TextView
            android:id="@+id/item_my_heji"
            android:layout_toLeftOf="@+id/item_myjiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计："/>

        <TextView
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/item_my_heji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共一件商品"/>
    </RelativeLayout>




    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"></View>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >
    <Button
        android:id="@+id/btn_again_buy"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@color/white"
        android:text="再次购买"/>
    <Button
        android:background="@color/white"
        android:text="申请解绑"
        android:layout_toLeftOf="@+id/btn_again_buy"
        android:layout_width="80dp"
        android:layout_height="35dp" />
</RelativeLayout>
</LinearLayout>
