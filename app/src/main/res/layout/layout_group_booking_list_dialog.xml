    android:paddingRight="@dimen/drawable_padding_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_group_booking"
        android:layout_width="match_parent"
