<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RelativeLayout_Default">

    <ImageView
        android:id="@+id/article_image"
        android:layout_width="@dimen/image_size_width"
        android:layout_height="@dimen/image_size_height"
        android:scaleType="fitXY"
        android:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/title"
        style="@style/TextView_Style_Title"
        android:gravity="start"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/article_image"
        android:layout_toEndOf="@+id/article_image"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_10" />

    <com.shantoo.widget.textview.LetterSpacingTextView
        android:id="@+id/des"
        style="@style/TextView_Style_Content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_below="@+id/title"
        android:gravity="start"
        android:maxLines="2"
        android:lineSpacingExtra="3dp"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toRightOf="@+id/article_image"
        android:layout_toEndOf="@+id/article_image" />
</RelativeLayout>