<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/drawable_btn_bg_color_refreshprimary3"
    android:layout_height="70dp"
    android:layout_marginTop="6dp">
      <TextView
    android:textColor="#000"
          android:layout_marginTop="8dp"
    android:textSize="15sp"

    android:id="@+id/home_place_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2222"/>
    <TextView
        android:textSize="12sp"
        android:textColor="#666"
        android:layout_marginTop="2dp"
        android:lines="1"
        android:layout_toLeftOf="@+id/home_place_img"
        android:layout_below="@+id/home_place_title"
        android:id="@+id/home_place_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2222"/>
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/home_place_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher"/>

</RelativeLayout>
