<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout_Divider"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
<LinearLayout
    android:background="@color/colorBackground"
   android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="30dp"

    >
<TextView
    android:layout_marginLeft="15dp"
    android:gravity="center_vertical"
    android:textColor="#999"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请填写商家绑定货柜的申请信息"/>
</LinearLayout>
    <LinearLayout
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/drawable_padding_15"
        android:paddingRight="@dimen/drawable_padding_15"
        style="@style/LinearLayout_Divider">

    <RelativeLayout
        android:id="@+id/action_update_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_image_logo"
            android:layout_width="@dimen/image_size_style_comment"
            android:layout_height="@dimen/image_size_style_comment"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_toStartOf="@+id/arrow"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_placeholder" />

        <ImageView
            android:id="@+id/arrow"
            style="@style/ImageView_RelativeLayout_Right" />

        <TextView
            style="@style/EditText_Default"
            android:hint="商家店铺LOGO"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
<TextView
    android:id="@+id/et1_new"
    android:layout_centerVertical="true"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:text="店铺名称"
    android:textColor="#333"/>
        <EditText
            android:layout_toRightOf="@+id/et1_new"
            android:id="@+id/et1"
            android:hint="请输入商家店铺名称"
            style="@style/EditText_Default" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/et6_new"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="联系人姓名"
            android:textColor="#333"/>
        <EditText
            android:layout_toRightOf="@+id/et6_new"
            android:id="@+id/et6"
            android:hint="请输入商家店铺联系人"
            style="@style/EditText_Default" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/et2_new"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="联系人手机"
            android:textColor="#333"/>
        <EditText
            android:layout_toRightOf="@+id/et2_new"
            android:id="@+id/et2"
            android:hint="请输入联系人手机号"
            style="@style/EditText_Default" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/et3_new"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="短信验证码"
            android:textColor="#333"/>
        <EditText
            android:layout_toRightOf="@+id/et3_new"
            android:id="@+id/et3"
            android:hint="请输入验证码"
            style="@style/EditText_Default_Password"/>

        <Button
            android:id="@+id/action_send_verify_code"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/tysl_get_code"
            android:layout_marginEnd="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/drawable_button_verify_code"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_style_two" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/action_select_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/et4_new"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="店铺地址"
            android:textColor="#333"/>
      <!--  <EditText
            android:layout_toRightOf="@+id/et4_new"
            android:id="@+id/et4"
            android:hint="请选择商家店铺地址"
            style="@style/EditText_Default" />-->

        <TextView
            android:id="@+id/et4"
            android:textColor="#999"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/et4_new"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="请选择商家店铺地址"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/et5_new"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="#333"/>
        <EditText
            android:layout_toRightOf="@+id/et5_new"
            android:id="@+id/et5"
            android:hint="请输入详细地址"
            style="@style/EditText_Default"
            android:layout_alignParentTop="true"

            />
    </RelativeLayout>

    <Button
        android:id="@+id/action_submit"
        style="@style/TextView_Style_Submit_Login"
        android:text="@string/tysl_affirm" />
    </LinearLayout>
</LinearLayout>