<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<LinearLayout
    style="@style/RelativeLayout_Default"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:orientation="horizontal">
    <TextView
        android:text="反馈类型:"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="#999999"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/pro_login"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/drawable_btn_bg_color_ac"
        android:gravity="center"
        android:text="登录注册"
        android:textColor="@drawable/software_textcolor"
        android:textSize="11sp" />
    <TextView
        android:background="@drawable/drawable_btn_bg_color_ac"
        android:id="@+id/pro_dindan"
        android:textColor="@drawable/software_textcolor"
        android:layout_marginLeft="5dp"
        android:textSize="11sp"
        android:layout_width="65dp"
         android:gravity="center"
        android:layout_height="wrap_content"
        android:text="订单问题"/>
    <TextView
        android:id="@+id/pro_zhifu"
        android:background="@drawable/drawable_btn_bg_color_ac"
        android:textColor="@drawable/software_textcolor"
        android:layout_marginLeft="5dp"
        android:layout_width="65dp"
        android:textSize="11sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="支付问题"/>
    <TextView
        android:id="@+id/pro_other"
        android:background="@drawable/drawable_btn_bg_color_ac"
        android:textColor="@drawable/software_textcolor"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:text="其它"/>
</LinearLayout>

    <EditText
        android:id="@+id/if_context"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="left"
        android:textSize="14sp"
        style="@style/RelativeLayout_Default"
        android:hint="请输入系统建议，帮助我们不断改进" />


    <com.wokun.tysl.duotupianshangchuan.MyMultiplePhotoSelector
        android:id="@+id/multiple_photo_selector"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rectangle_radius_grid_bg"
        android:listSelector="@drawable/selector_pressed_gray"
        android:horizontalSpacing="5dip"
        android:numColumns="4"
        android:padding="10dip"
        android:verticalSpacing="5dip" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/RelativeLayout_Default"
    android:hint="请输入手机号码（选填）"/>

    <Button
        android:text="提交"
        android:id="@+id/action_submit"
        style="@style/TextView_Style_Submit" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
