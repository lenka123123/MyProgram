<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingLeft="@dimen/drawable_padding_6"
    android:paddingRight="@dimen/drawable_padding_6"
    android:paddingTop="@dimen/drawable_padding_15"
    android:paddingBottom="@dimen/drawable_padding_15"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_ask_service"
            style="@style/TextView_Home_Navigation"
            android:drawableTop="@drawable/ic_home_health"
            android:textColor="@color/colorMenu"
            android:text="@string/tysl_ask_service" />

        <TextView
            android:id="@+id/action_chain_stores"
            style="@style/TextView_Home_Navigation"
            android:drawableTop="@drawable/ic_home_shop"
            android:textColor="@color/colorMenu"
            android:text="@string/tysl_chain_stores" />

        <TextView
            android:id="@+id/action_social_assets"
            style="@style/TextView_Home_Navigation"
            android:textColor="@color/colorMenu"
            android:drawableTop="@drawable/ic_home_shejiaolian"
            android:text="云链健康" />

        <TextView
            android:id="@+id/action_service_in"
            style="@style/TextView_Home_Navigation"
            android:drawableTop="@drawable/dsyt_yaoqing"
            android:textColor="@color/colorMenu"
            android:text="邀请码" />
    </LinearLayout>
</LinearLayout>