<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <RelativeLayout
               style="@style/RelativeLayout_Default"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/change_image"
    android:layout_width="match_parent"
    android:layout_height="375dp"
    android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/change_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
         android:textSize="14sp"
        android:textColor="#222222"
        android:layout_centerVertical="true"
        android:layout_below="@+id/change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话卡好拉好的啦好的啦k"/>

    <TextView
        android:id="@+id/change_zichan"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/change_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资产："/>
    <TextView
        android:id="@+id/change_zichan_price"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/change_zichan"
        android:layout_below="@+id/change_name"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1123"/>
   <RelativeLayout
       android:layout_marginTop="16dp"
       android:layout_toRightOf="@+id/change_zichan_price"
       android:layout_below="@+id/change_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
    <TextView
      android:id="@+id/change_place"
        android:layout_marginLeft="10dp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="市场价:"
        />

       <TextView
           android:id="@+id/change_exchange_integral"
           android:layout_toRightOf="@+id/change_place"
           android:textColor="#999999"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="2222"
           />
   </RelativeLayout>
    <View
        android:layout_toRightOf="@+id/change_zichan_price"
        android:layout_below="@+id/change_name"
        android:layout_width="85dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"></View>
           </RelativeLayout>
       <LinearLayout
           style="@style/RelativeLayout_Default"
            android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"

           android:layout_gravity="center">
    <ImageView

    android:layout_width="140dp"
    android:layout_height="20dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/ic_shopdetails"/>
       </LinearLayout>
           <com.itheima.view.BridgeWebView
               android:layout_marginTop="5dp"
               android:id="@+id/bridge_web_view"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:visibility="visible" />

       </LinearLayout>

   </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/drawable_button_bg_normal"
        android:id="@+id/change_edt"
        android:text="立即置换"
        android:textSize="18sp"
        android:gravity="center"
         android:textColor="@color/white"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
