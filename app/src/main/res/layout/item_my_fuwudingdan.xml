<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        style="@style/RelativeLayout_Default"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号："
            >
        </TextView>
        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123445678"
            >
        </TextView>
        <TextView

           android:gravity="right"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务中"/>
    </LinearLayout>
<View
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/colorGray"></View>
    <LinearLayout
        style="@style/RelativeLayout_Default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/item_my_zichan"
            android:layout_weight="1"
            android:text="1122" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
   <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="11122312"
    android:textSize="15sp"
    android:textColor="#333"
    android:textStyle="bold"
    android:layout_marginLeft="15dp"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_marginTop="15dp"
               android:layout_marginLeft="15dp"
               android:id="@+id/item_my_zhihuan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="服务时间:"/>
           <TextView
               android:id="@+id/item_my_count"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="15dp"
               android:layout_toRightOf="@+id/item_my_zhihuan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2018—1—1"/>


           <TextView
               android:id="@+id/item_my_zichan"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="12dp"
               android:layout_below="@+id/item_my_zhihuan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="服务时长:"/>

           <TextView
               android:id="@+id/item_my_shuliang"
               android:layout_marginTop="12dp"
               android:layout_marginLeft="15dp"
                android:layout_below="@+id/item_my_count"
               android:layout_toRightOf="@+id/item_my_zichan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="60天"/>
           <TextView
               android:id="@+id/item_zongjia"
               android:layout_marginTop="12dp"
               android:layout_marginLeft="40dp"
               android:layout_below="@+id/item_my_count"
               android:layout_toRightOf="@+id/item_my_shuliang"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="总价："/>

           <TextView

               android:layout_marginTop="12dp"
               android:layout_marginLeft="5dp"
               android:layout_below="@+id/item_my_count"
               android:layout_toRightOf="@+id/item_zongjia"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="$2223"/>

      </RelativeLayout>

        </LinearLayout>

        
    </LinearLayout>
    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"></View>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >
    <Button
        android:id="@+id/btn_again_buy"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@color/white"
        android:text="再次购买"/>
    <Button
        android:background="@color/white"
        android:text="申请解绑"
        android:layout_toLeftOf="@+id/btn_again_buy"
        android:layout_width="80dp"
        android:layout_height="35dp" />
</RelativeLayout>
</LinearLayout>
