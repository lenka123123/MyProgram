<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/pop_pay_delete"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pay_success_delete"/>
<LinearLayout
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/pop_pay_img1"
        android:src="@drawable/ic_launcher"
        android:layout_width="76dp"
        android:layout_height="76dp" />
    <ImageView

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/pay_success_add"
        android:layout_width="11dp"
        android:layout_height="11dp" />
    <ImageView
        android:id="@+id/pop_pay_img2"
        android:src="@drawable/ic_launcher"
        android:layout_width="76dp"
        android:layout_height="76dp" />

</LinearLayout>

    <TextView
        android:layout_marginTop="31dp"
        android:text="付款成功!"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    <TextView
        android:id="@+id/pop_pay_txt1"
        android:gravity="center"
        android:layout_gravity="center"
        android:text=""
        android:textColor="#555"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:background="@drawable/item_bg_normal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/pop_pay_see"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@drawable/drawable_btn_bg_color_ac2"
            android:gravity="center"
            android:layout_width="80dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="35dp"
            android:text="去看看"/>

    </LinearLayout>


</LinearLayout>
