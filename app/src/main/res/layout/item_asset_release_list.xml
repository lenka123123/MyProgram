<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RelativeLayout_Default">

    <TextView
        android:textSize="13sp"
        android:id="@+id/tv_username"
        android:text="dd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="dd2"
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_username"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_toEndOf="@+id/tv_username"
        android:layout_toRightOf="@+id/tv_username" />

    <TextView
        android:text="dd2"
        android:id="@+id/tv_surplus_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginTop="@dimen/margin_10" />

    <TextView
        android:text="dd2"
        android:id="@+id/surplus_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_surplus_num"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_toEndOf="@+id/tv_surplus_num"
        android:layout_toRightOf="@+id/tv_surplus_num" />

    <TextView
        android:text="dd2"
        android:id="@+id/tv_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_surplus_num"
        android:layout_marginTop="@dimen/margin_10" />

    <TextView
        android:text="dd2"
        android:id="@+id/unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_unit_price"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_toEndOf="@+id/tv_unit_price"
        android:layout_toRightOf="@+id/tv_unit_price" />

    <TextView
        android:text="dd2"
        android:id="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_unit_price"
        android:layout_marginTop="@dimen/margin_10" />

    <TextView
        android:text="dd2"
        android:id="@+id/create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_create_time"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_toEndOf="@+id/tv_create_time"
        android:layout_toRightOf="@+id/tv_create_time" />

    <TextView
        android:text="dd211111"
        android:id="@+id/action_asset_release_buy"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_create_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/drawable_btn_bg_color_white"
        android:gravity="end"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_style_three" />

    <TextView
        android:text="dd11111"
        android:id="@+id/action_asset_release_sell"
          android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_create_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/drawable_btn_bg_color_white"
        android:gravity="end"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_style_three" />
</RelativeLayout>