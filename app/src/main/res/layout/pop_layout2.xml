<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ver="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/RelativeLayout_Default"
   android:padding="15dp">
    <ImageView
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/pop_delete"/>
    <TextView
        android:id="@+id/pop_zhihui_shanchu"
        style="@style/RelativeLayout_Default"
        android:textColor="#333"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="请输入取货验证码"/>
<LinearLayout
    android:id="@+id/pop_zhihui_text"
     android:layout_below="@+id/pop_zhihui_shanchu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <com.wokun.tysl.utils.EditInputView
        android:id="@+id/edit1"
        android:digits="1234567890"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        ver:box="6"
        ver:box_bg_normal="@drawable/edit_bg_normal"
        ver:box_bg_focus="@drawable/edit_bg_focus"
        ver:child_h_padding="5dp"
        android:layout_centerInParent="true"/>
</LinearLayout>

    <Button
        android:layout_below="@+id/pop_zhihui_text"
        android:id="@+id/btnCommit"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/drawable_btn_bg_color_primary"
        android:text="提交"
        android:textColor="#ffffff"/>
</RelativeLayout>