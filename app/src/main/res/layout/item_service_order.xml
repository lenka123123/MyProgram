<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/RelativeLayout_Default"
    android:layout_marginBottom="@dimen/margin_10">

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/image_size_style_default"
        android:layout_height="@dimen/image_size_style_default"
        android:layout_marginTop="@dimen/margin_top"
        android:scaleType="fitCenter"
        app:riv_border_color="@android:color/transparent"
        app:riv_border_width="@dimen/drawable_padding_1"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/state"
        style="@style/TextView_RelativeLayout_Right"
        android:layout_alignTop="@+id/name"
        android:layout_centerVertical="false" />

    <TextView
        android:id="@+id/name"
        style="@style/TextView_Style_Content"
        android:layout_alignTop="@+id/logo"
        android:textColor="@color/color22"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_toRightOf="@+id/logo"
        android:layout_toEndOf="@+id/logo"/>

    <TextView
        android:id="@+id/service_time"
        style="@style/TextView_Style_Three"
        android:textColor="@color/color77"
        android:layout_below="@+id/name"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/logo"
        android:layout_toEndOf="@+id/logo"
        android:text="@string/tysl_service_time" />

    <TextView
        android:id="@+id/service_long"
        style="@style/TextView_Style_Three"
        android:textColor="@color/color77"
        android:layout_below="@+id/service_time"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/logo"
        android:layout_toEndOf="@+id/logo"
        android:text="@string/tysl_service_long" />

    <TextView
        android:id="@+id/tv"
        style="@style/TextView_Style_Three"
        android:textColor="@color/color77"
        android:layout_below="@+id/service_long"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/logo"
        android:layout_toEndOf="@+id/logo"
        android:text="@string/tysl_total_price" />

    <TextView
        android:id="@+id/price"
        style="@style/TextView_Style_Three"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/service_long"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/tv"
        android:layout_toEndOf="@+id/tv"/>

    <TextView
        android:id="@+id/action_refuse"
        style="@style/TextView_Style_Three"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toLeftOf="@+id/action_accept"
        android:layout_toStartOf="@+id/action_accept"
        android:text="@string/tysl_refuse"
        android:layout_alignBottom="@+id/tv"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/drawable_btn_bg_color_white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/action_accept"
        style="@style/TextView_Style_Three"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/tysl_accept"
        android:textColor="@color/colorWhite"
        android:background="@drawable/drawable_btn_bg_color_primary"
        android:visibility="gone" />

    <TextView
        android:id="@+id/action_send_message"
        style="@style/TextView_Style_Three"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv"
        android:layout_marginTop="10dp"
        android:background="@drawable/drawable_btn_bg_color_primary"
        android:text="@string/tysl_send_message"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />

    <TextView
        android:id="@+id/action_check_evaluate"
        style="@style/TextView_Style_Three"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/drawable_btn_bg_color_ac"
        android:text="@string/tysl_check_evaluate"
        android:visibility="gone" />
</RelativeLayout>