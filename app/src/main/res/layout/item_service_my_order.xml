<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/RelativeLayout_Default"
                android:layout_marginBottom="@dimen/margin_10">

    <TextView
        android:id="@+id/order_num"
        style="@style/TextView_Style_Three"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:text="@string/tysl_order_num"
        android:textColor="@color/color77"/>

    <TextView
        android:id="@+id/order_number"
        style="@style/TextView_Style_Three"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/order_num"
        android:text="123456789"
        android:textColor="@color/color77"/>

    <TextView
        android:id="@+id/order_time"
        style="@style/TextView_Style_Three"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:text="2018-05-03"
        android:textColor="@color/color77"/>
    <TextView
        android:id="@+id/order_click"
        style="@style/TextView_Style_Three"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:text="确认自提"
        android:textColor="@color/color77"
        android:visibility="gone"/>

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/image_size_style_default"
        android:layout_height="@dimen/image_size_style_default"
        android:layout_below="@+id/order_number"
        android:layout_marginTop="@dimen/margin_top"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_store"
        app:riv_border_color="@android:color/transparent"
        app:riv_border_width="@dimen/drawable_padding_1"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/state"
        style="@style/TextView_RelativeLayout_Right"
        android:layout_alignTop="@+id/name"
        android:layout_centerVertical="false"/>

    <TextView
        android:id="@+id/name"
        style="@style/TextView_Style_Content"
        android:layout_alignTop="@+id/logo"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_toEndOf="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:textColor="@color/color22"/>


    <TextView
        android:id="@+id/order_price"
        style="@style/TextView_Style_Three"
        android:layout_below="@+id/name"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toEndOf="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:text="¥249.00"
        android:textColor="@color/color77"/>


    <TextView
        android:id="@+id/order_profit"
        style="@style/TextView_Style_Three"
        android:layout_below="@+id/order_price"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toEndOf="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:text="@string/tysl_order_proft"
        android:textColor="@color/color77"/>

    <TextView
        android:id="@+id/price"
        style="@style/TextView_Style_Three"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/order_profit"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:text="@string/tysl_order_allprice"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/order_amount"
        style="@style/TextView_Style_Three"
        android:layout_below="@+id/order_profit"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toLeftOf="@+id/price"
        android:layout_toStartOf="@+id/price"
        android:text="@string/tysl_order_amont"
        android:textColor="@color/color77"/>
    <View
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/order_amount"
        android:layout_marginTop="@dimen/activity_margin_bottom_15"
        android:background="@color/md_divider_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_marginTop="@dimen/activity_margin_bottom_15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_store"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="芳芳"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_store"/>

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="138454646"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>