<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout

        android:id="@+id/action_edit_password"
        style="@style/RelativeLayout_Default">
        <ImageView

            android:id="@+id/first_home_yinyang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_zhihuilinshou"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/first_home_yinyang"
            style="@style/TextView_Style_Title"
            android:text="智慧零售" />

    </RelativeLayout>
<RelativeLayout
    android:gravity="center"

    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:id="@+id/home_zhihui_1"
        android:background="@drawable/shape_gray_square_bg"
        android:layout_width="138dp"
        android:layout_height="175dp" />
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:id="@+id/home_zhihui_2"
    android:layout_marginLeft="3dp"
        android:background="@drawable/shape_gray_square_bg"
         android:layout_toRightOf="@+id/home_zhihui_1"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <LinearLayout

        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/home_zhihui_1"
        android:layout_below="@+id/home_zhihui_2"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:id="@+id/home_zhihui_3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="@drawable/shape_gray_square_bg"
            android:layout_marginRight="1.5dp"
      />

        <ImageView
            android:background="@drawable/shape_gray_square_bg"
            android:layout_marginLeft="1.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:id="@+id/home_zhihui_4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="92dp"
         />
    </LinearLayout>
</RelativeLayout>

</LinearLayout>
