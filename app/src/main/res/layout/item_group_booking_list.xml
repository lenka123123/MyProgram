<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/drawable_padding_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_image"
        android:background="@drawable/ic_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="¥ 0.01"
        android:id="@+id/tv_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        style="@style/TextView_Style_RMB" />

    <TextView
        android:text="去拼单"
        android:id="@+id/action_group_booking"
        style="@style/TextView_Style_Action"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv_content"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default" />

    <TextView
        android:text="标题"
        android:id="@+id/tv_title"
        android:layout_marginTop="15dp"
        style="@style/TextView_Style_Title"
        android:layout_below="@+id/iv_image"
        android:layout_alignRight="@+id/tv_content"
        android:layout_alignEnd="@+id/tv_content" />
</RelativeLayout>